{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "abandonmentThreshold": "6 months",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "assignees": [
    "thatleda"
  ],
  "rebaseWhen": "behind-base-branch",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "description": "Group Node.js runtime versions across all files",
      "matchDatasources": [
        "github-actions",
        "node-version"
      ],
      "matchPackageNames": [
        "node",
        "node-version"
      ],
      "groupName": "Node.js runtime",
      "groupSlug": "nodejs-runtime"
    },
    {
      "description": "Group pnpm versions across all files",
      "matchPackageNames": ["pnpm"],
      "groupName": "pnpm package manager",
      "groupSlug": "pnpm"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update"
      ]
    }
  ]
}
