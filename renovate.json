{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "abandonmentThreshold": "6 months",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "assignees": [
    "thatleda"
  ],
  "rebaseWhen": "behind-base-branch",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update"
      ]
    }
  ]
}
